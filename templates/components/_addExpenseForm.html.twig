<form class="bg-danger row m-1" id="add-expense">
    <label for="inputExpenseText" class="form-label">Add Expense</label>
    <div class="row m-1">
        <input
                type="text"
                class="form-control col-9 movement form-control-sm bg-danger border-0"
                id="inputExpenseText"
                name="inputExpenseText"
        >
    </div>
    <div class="row m-1">
        <div class="col-9 p-0">
            <input
                    type="number"
                    min="0"
                    step="0.01"
                    class="form-control movement form-control-sm bg-danger border-0"
                    id="inputExpense"
                    name="inputExpense"
            >
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-primary">-></button>
        </div>
    </div>

</form>